{
    "manifest_version": 3,
    "name": "Hamster Kombat Bot",
    "version": "1.0",
    "description": "Hamster Kombat Game Bot",
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
        "16": "icons/hamster-16.png",
        "32": "icons/hamster-32.png",
        "48": "icons/hamster-48.png",
        "64": "icons/hamster-64.png",
        "128": "icons/hamster-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["https://web.telegram.org/*", "https://hamsterkombatgame.io/*"],
          "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/hamster-16.png",
            "32": "icons/hamster-32.png",
            "48": "icons/hamster-48.png",
            "64": "icons/hamster-64.png",
            "128": "icons/hamster-128.png"
        }
    }
}
